swiper{
  height: 600rpx;
}
.swiper-img{
  width: 100%;
  height: 500rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
}
.post-user-container{
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.post-user-avatar{
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}
.line{
  border: 1rpx solid #ededed;
  margin-top: 30rpx;
}
.date{
  margin-left: 30rpx;
  vertical-align: middle;
}
.title{
  margin: 5rpx 20rpx 0 20rpx;
  font-size: 45rpx;
  font-weight: bold;
  letter-spacing: 5rpx;
}
.postImg{
  width: 100%;
  margin-top: 10rpx; 
  height: 400rpx; 
}
.content{
  margin:  10rpx 20rpx 0 20rpx;
  font-size: 34rpx;
}
.tool-container{
  flex-direction: row;
  margin: 20rpx 20rpx 0 20rpx;
}
.tool-img{
  width: 40rpx;
  height:40rpx;
  vertical-align: middle;
}
.tool-count{
  width: 40rpx;
  height:40rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  font-size: 40rpx;
}
.line-last{
  border: 1rpx solid #ededed;
  margin-top: 30rpx;
}