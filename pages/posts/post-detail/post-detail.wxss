.post-detail-container {
  display: flex;
  flex-direction: column;
}

.post-detail-img {
  width: 100%;
  height: 400rpx;
}

.post-detail-user-container {
  display: flex;
  flex-direction: row;
  margin: 15rpx 20rpx 0 20rpx;
}

.post-detail-user-img {
  width: 70rpx;
  height: 70rpx;
  vertical-align: middle;
}

.post-detail-user-name {
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 15rpx;
}

.post-detail-static-text {
  font-size: 30rpx;
  color: #405f80;
  vertical-align: middle;
  margin-left: 15rpx;
}

.post-detail-date {
  font-size: 28rpx;
  vertical-align: middle;
  margin-left: 15rpx;
  
}
.post-detail-title{
  margin: 15rpx 20rpx 0 20rpx;
  font-weight: bold;
  font-size: 40rpx;
  letter-spacing: 5rpx;
}

.line{
  width: 660rpx;
  height: 2px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}
.tool-img{
  width: 80rpx;
  height: 80rpx;
  float: right;
  margin-right: 20rpx;
}
.post-detail-content{
  margin: 15rpx 20rpx 0 20rpx;
  font-size: 34rpx;
}
.audio{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 150rpx;
  opacity: 0.8;
  
}